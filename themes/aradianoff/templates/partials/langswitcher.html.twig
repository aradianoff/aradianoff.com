<ul class="langswitcher">
    {% for key, language in langswitcher.languages %}
        <li>
            {% if key == langswitcher.current %}
                <a href="{{ page.url }}" class="active" title="{{  language.nativeName|capitalize }}"><img src={{theme_url}}/images/{{ key }}.png alt="{{ key }}" /></a> 
            {% else %}
                <a href="{{ url(key~langswitcher.page_route) }}" title="{{  language.nativeName|capitalize }}"><img class="non_active" src={{theme_url}}/images/{{ key }}.png alt="{{ key }}" /></a>
            {% endif %}
        </li>
{% endfor %}   
</ul> 

