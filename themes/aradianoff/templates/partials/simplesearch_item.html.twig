<section class="search-row">

    {% set banner = page.media.images|first %}

    {% if banner %}
    <div class="search-image">
        <a href="{{ page.url }}">{{ banner.cropZoom(100,100).html }}</a>
    </div>
    {% endif %}
    <div class="search-item">
        <div class="search-title">
            <h3><a href="{{ page.url }}">{{ page.title }}</a></h3>
        </div>

        <div class="search-details">
            <span class="search-date"> 
            {% if grav.language.getActive == 'es' %}
                {{ page.date|date('d') }} de {{ 'MONTHS_OF_THE_YEAR'|ta(page.date|date('n') - 1) }} de {{ page.date|date('Y') }}
            {% else %}
                {{ page.date|date(config.system.pages.dateformat.short) }}
            {% endif %}
            </span>
        </div>

        <p>{{ page.summary }}</p>

        <hr />
    </div>
</section>
