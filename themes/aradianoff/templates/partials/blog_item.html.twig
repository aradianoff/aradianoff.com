<div class="list-item">

    <div class="list-blog-header">
		<span class="list-blog-date">
		{% if langswitcher.current == 'en' %}
            {% set mes = ['JAN', 'FEB' , 'MAR', 'APR', 'MAY', 'JUN', 'JUL', 'AUG', 'SET', 'OCT', 'NOV', 'DEC'] %}
        {% else %}
            {% set mes = ['ENE', 'FEB' , 'MAR', 'ABR', 'MAY', 'JUN', 'JUL', 'AGO', 'SEP', 'OCT', 'NOV', 'DIC'] %}
        {% endif %}
        
        {% set nrMeses = page.date|date("n") %}
        {% set meses = mes[nrMeses -1] %}
        <span>{{ page.date|date("d") }}</span>
        <em>{{ meses }}</em>
      </span>
        
        {% if page.header.link %}
            <h4>
                {% if page.header.continue_link is not sameas(false) %}
                <a href="{{ page.url }}"><i class="fa fa-angle-double-right"></i></a>
                {% endif %}
                <a href="{{ page.header.link }}">{{ page.title }}</a>
            </h4>
        {% else %}
            <h4><a href="{{ page.url }}">{{ page.title }}</a></h4>
        {% endif %}

        {% if page.taxonomy.tag %}
        <span class="tags">
            {% for tag in page.taxonomy.tag %}
            <a href="{{ base_url }}/tag{{ config.system.param_sep }}{{ tag }}">{{ tag }}</a>
            {% endfor %}
        </span>
        {% endif %}
        {% if big_header %}
            {{ page.media.images|first.cropResize(900,600).html }}
        {% else %}
            {{ page.media.images|first.cropZoom(900,300).html }}
        {% endif %}

    </div>

    <div class="list-blog-padding">

    {% if page.header.continue_link is sameas(false) %}
        <p>{{ page.content }}</p>
        {% if not truncate %}
        {% set show_prev_next = true %}
        {% endif %}
    {% elseif truncate and page.summary != page.content %}
        <p>{{ page.summary }}</p>
        <p><a href="{{ page.url }}">{{ "AR_POST.READ_MORE"|t }}...</a></p>
    {% elseif truncate %}
        <p>{{ page.content|truncate(550) }}</p>
        <p><a href="{{ page.url }}">{{ "AR_POST.READ_MORE"|t }}...</a></p>
    {% else %}
        <p>{{ page.content }}</p>
         {{ jscomments('disqus', { shortname: 'aradianoff' }) }}
        {% set show_prev_next = true %}
    {% endif %}
    

    {% if show_prev_next %}

        <p class="prev-next">
            {% if not page.isFirst %}
                <a class="button" href="{{ page.nextSibling.url }}"><i class="fa fa-chevron-left"></i> {{ "AR_PAGINATION.NEXT"|t }}</a>
            {% endif %}

            {% if not page.isLast %}
                <a class="button" href="{{ page.prevSibling.url }}">{{ "AR_PAGINATION.PREVIOUS"|t }} <i class="fa fa-chevron-right"></i></a>
            {% endif %}
        </p>
    {% endif %}

    </div>
</div>

